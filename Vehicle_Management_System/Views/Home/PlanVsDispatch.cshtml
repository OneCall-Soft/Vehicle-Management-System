@model Vehicle_Management_System.Models.PlanDispatchModel

@{
    ViewBag.Title = "PlanVsDispatchv";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" integrity="sha512-mSYUmp1HYZDFaVKK//63EcZq4iFWFjxSL+Z3T/aCt4IO9Cejm03q3NKKYN6pFQzY0SBOr8h+eCIAZHPXcpZaNw==" crossorigin="anonymous" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" integrity="sha512-T/tUfKSV1bihCnd+MxKD0Hm1uBBroVYBOYSk1knyvQ9VyZJpc/ALb4P0r6ubwVPSGB2GvjeoMAJJImBG12TiaQ==" crossorigin="anonymous"></script>

<form action="PlanVsDispatch" method="post">
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <!-- basic table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <!-- Column -->
                        <div class="col-md-6 col-lg-3 col-xlg-3">
                            <div class="card card-hover">
                                <div class="p-2 bg-primary text-center">
                                    <h1 class="font-light text-white">@Session["currentMonthPlanCount"].ToString()</h1>
                                    <h6 class="text-white">Current Month Plan Submitted</h6>
                                </div>
                            </div>
                        </div>
                        <!-- Column -->
                        <div class="col-md-6 col-lg-3 col-xlg-3">
                            <div class="card card-hover">
                                <div class="p-2 bg-cyan text-center">
                                    <h1 class="font-light text-white">@Session["currentMonthMyDispatchCount"].ToString()</h1>
                                    <h6 class="text-white">Current Month Dispatched</h6>
                                </div>
                            </div>
                        </div>
                        <!-- Column -->
                        <div class="col-md-6 col-lg-3 col-xlg-3">
                            <div class="card card-hover">
                                <div class="p-2 bg-success text-center">
                                    <h1 class="font-light text-white">@Session["currentMonthApproveCount"].ToString()</h1>
                                    <h6 class="text-white">Current Month Approved</h6>
                                </div>
                            </div>
                        </div>
                        <!-- Column -->
                        <div class="col-md-6 col-lg-3 col-xlg-3">
                            <div class="card card-hover">
                                <div class="p-2 bg-danger text-center">
                                    <h1 class="font-light text-white">@Session["currentMonthMyDispatchCount"].ToString()       </h1>
                                    <h6 class="text-white">My Current Month Dispatched </h6>
                                </div>
                            </div>
                        </div>
                        <!-- Column -->

                        <script>

                            $(function () {
                                $('._date').datepicker({
                                    showCurrentAtPos: "down",
                                    format: "mm-yyyy",
                                    viewMode: "months",
                                    minViewMode: "months",
                                    showOtherMonths: true,
                                    selectOtherMonths: true,
                                    autoclose: true,
                                    changeMonth: true,
                                    changeYear: true,
                                    defaultDate:"2021"

                                });
                            });</script>
                        <!-- Column -->
                        <div class="col-md-6 col-lg-3 "></div>
                        <div class=" col-lg-3 "></div>
                        <div class="col-lg-3 "></div>
                        <div class="col-md-6 col-lg-3 col-xlg-3 p-3 " style="z-index:1000">
                            <div class="input-group mb-3 float-right ">
                                <div class="input-group-prepend">
                                    <i class="input-group-text fa fa-calendar" id="basic-addon1"></i>
                                </div>
                                @Html.TextBoxFor(x => x.FetchDetails.PlanYear, new { @class = "_date form-control border border-success border-right-0 disabled", @type = "text", @placeholder = "Select Month" })
                                <div class="input-group-append ">
                                    <button class="btn btn-outline-success input-group-btn m-0" type="submit">Search</button>
                                </div>
                            </div>
                        </div>
                        <!-- Column -->
                        <!-- Column -->
                    </div>
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered no-wrap">
                            <thead>
                                <tr>
                                    <th class="d-none">ID</th>
                                    <th>Modal Nane</th>
                                    <th>Modal Color</th>
                                    <th>Plan</th>
                                    <th>Approve</th>
                                    <th>Dispatch</th>
                                    <th>Balance</th>
                                </tr>
                            </thead>

                            <tbody> @foreach (var item in @Model.PlanDispatchDetails) {
                                <tr>
                                    <th class="d-none">ID</th>
                                    <th>@item.ModalName</th>
                                    <th>@item.ModalColor</th>
                                    <th>@item.PlanQuantity</th>
                                    <th>@item.ApproveQuantity</th>
                                    <th>@item.DispatchQuantity</th>
                                    <th>@item.BalanceQuantity</th>
                                </tr>
                            }</tbody>
                            <tfoot>
                                <tr>
                                    <th class="d-none">ID</th>
                                    <th>Modal Nane</th>
                                    <th>Modal Color</th>
                                    <th>Plan</th>
                                    <th>Approve</th>
                                    <th>Dispatch</th>
                                    <th>Balance</th>
                                </tr>
                            </tfoot>
                        </table>
                        <ul class="pagination float-right">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Previous</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- End Container fluid  -->
<!-- ============================================================== -->
</form>